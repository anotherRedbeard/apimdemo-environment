<!--
    IMPORTANT:
    - Policy fragment are included as-is whenever they are referenced.
    - If using variables. Ensure they are setup before use.
    - Copy and paste your code here or simply start coding
-->
<fragment>
	<choose>
		<when condition="@(!string.IsNullOrEmpty((string)context.Variables["outputResponseId"]))">
			<send-request mode="new" response-variable-name="funcResponse" timeout="60" ignore-error="true">
				<set-url>@("https://red-ccan-functionapp.azurewebsites.net/api/CacheResponseToUserHttpTrigger?key="+(string)context.Variables["outputResponseId"]+"&ttl=36500")</set-url>
				<set-method>POST</set-method>
				<set-body>@(context.Variables.GetValueOrDefault<string>("userId",""))</set-body>
			</send-request>
		</when>
	</choose>
</fragment>